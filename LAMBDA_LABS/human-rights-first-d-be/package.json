{
  "name": "labs-api-starter",
  "version": "0.2.0",
  "private": false,
  "license": "MIT",
  "repository": "github:Lambda-School-Labs/labs-api-starter",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "watch:dev": "nodemon",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "format": "npx prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md)\"",
    "knex": "npx knex --knexfile config/knexfile.js",
    "test": "cross-env NODE_ENV=testing jest api/ds_server/tests/ --watch --verbose --runInBand",
    "coverage": "CI=true npx jest --coverage --detectOpenHandles --forceExit"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/__tests__/**",
      "!**/coverage/**",
      "!**/apidoc/**"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": [
      "api/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "@okta/jwt-verifier": "^1.0.0",
    "axios": "^0.19.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "faker": "^4.1.0",
    "helmet": "^3.23.3",
    "http-errors": "~1.6.3",
    "knex": "^0.21.12",
    "morgan": "~1.9.1",
    "node-cron": "^2.0.3",
    "pg": "^8.4.2",
    "sqlite3": "^5.0.0",
    "swagger-jsdoc": "^4.3.2",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "jest": "^25.2.4",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2"
  }
}
